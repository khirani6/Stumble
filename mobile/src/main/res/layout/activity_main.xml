<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="false"
    android:background="@color/stumbleBackground"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/stumble_logo"
        android:layout_width="263dp"
        android:layout_height="54dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/stumble_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002"
        app:srcCompat="@drawable/stumble_logo_mobile" />

    <EditText
        android:id="@+id/email_field"
        android:layout_width="306dp"
        android:layout_height="56dp"
        android:layout_marginBottom="368dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="@string/email"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stumble_logo" />

    <EditText
        android:id="@+id/password_field"
        android:layout_width="307dp"
        android:layout_height="59dp"
        android:layout_marginBottom="282dp"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_field" />



    <Button
        android:id="@+id/log_in_button"
        android:layout_width="206dp"
        android:layout_height="64dp"
        android:layout_marginTop="48dp"
        android:text="Log In"
        android:textStyle="bold"
        android:textColor="@color/stumbleBackground"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sign_up_button"
        app:layout_constraintTop_toBottomOf="@+id/password_field" />

    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="204dp"
        android:layout_height="62dp"
        android:layout_marginBottom="72dp"
        android:layout_marginTop="40dp"
        android:text="Sign up"
        android:textStyle="bold"
        android:textColor="@color/stumbleBackground"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log_in_button"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>